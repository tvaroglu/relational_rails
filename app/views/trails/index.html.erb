<h1>Trails Index</h1>
<br>
<% @trails.each do |trail| %>
  <h3><%= trail.name %></h3>
  <p>Length: <%= trail.length %></p>
  <p>Elevation Gain: <%= trail.elevation_gain %></p>
  <p>Loop?: <%= trail.loop %></p>
  <%= link_to "Edit #{trail.name}", "/trails/#{trail.id}/edit" %>&nbsp;
  <%= link_to "Delete #{trail.name}", "/trails/#{trail.id}", method: :delete %>
  <br><br>
<% end %>
