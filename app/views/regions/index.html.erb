<div style="padding-left:20px;">
  <h1>Regions Index</h1>

  <form style="float:left;" action="/regions/new">
    <input type="submit" value="New Region"/>
  </form>
  <br><br>
  <br><br>

  <% @regions.each do |region| %>
    <h3 style="float:left;"><%= link_to region.name, "/regions/#{region.id}" %></h3>
    <br><br>
    <p style="float:left;"><em>Created At: <%=region.created_at %></em></p>
    <br><br>
    <form style="float:left; padding-right:5px;" action= <%= "/regions/#{region.id}/edit" %>>
      <input type="submit" value="Update Region"/>
    </form>
    <%= button_to 'Delete Region', "/regions/#{region.id}", method: :delete %>
    <br><br><br>
  <% end %>
</div>
