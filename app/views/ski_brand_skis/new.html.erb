<div class="col-4">
  <%= bootstrap_form_tag url: "/ski_brands/#{@brand_id}/skis", method: :post do |form| %>
    <%= form.text_field :name, required: "true" %>
    <%= form.check_box :for_jumps %>
    <%= form.number_field :turn_radius, required: "true" %>

  <%= form.submit 'Create' %>
<% end %>
</div>