<div class="col-6">
  <%= bootstrap_form_tag url: '/skis', method: :post do |form| %>
  <%= form.text_field :name %>
  <%= form.check_box :for_jumps %>
  <%= form.number_field :turn_radius %>

  <%= form.form_group :ski_brand_id, label: { text: "Brand" } do %>
    <% @ski_brands.each do |brand| %>
      <%= form.radio_button :ski_brand_id, brand.id, label: "#{brand.name}" %>
    <% end %>
  <% end %>

  <%= form.submit 'Create' %>
<% end %>
</div>