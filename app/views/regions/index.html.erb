<div style="padding-left:20px;">
  <h1>Regions Index</h1>

  <form style="float:left; padding-right:5px;" action="/regions/new">
    <input type="submit" value="New Region"/>
  </form>
  <div style="float:left;">
    <%= form_with url: "/regions", method: :get, local: true do |form| %>
      <%= form.submit 'Sort by Resort Count' %>
    <% end %>
  </div>
  <br><br>
  <br><br>

  <% @regions.each do |region| %>
    <h3 style="float:left;"><%= link_to region.name, "/regions/#{region.id}" %></h3>
    <br><br>
    <p><strong>Total Resorts: </strong><%=region.resort_count %></p>
    <p><em>Created At: <%=region.created_at %></em></p>
    <form style="float:left; padding-right:5px;" action= <%= "/regions/#{region.id}/edit" %>>
      <input type="submit" value="Update Region"/>
    </form>
    <%= button_to 'Delete Region', "/regions/#{region.id}", method: :delete %>
    <br><br><br>
  <% end %>
</div>
